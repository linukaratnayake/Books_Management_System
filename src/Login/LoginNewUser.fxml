<AnchorPane prefHeight="423.0" prefWidth="393.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Login.LoginNewUserController">
   <AnchorPane layoutY="112.0" prefHeight="367.0" prefWidth="486.0" style="-fx-background-color: #f2d691;">
      <Label layoutX="141.0" layoutY="18.0" text="Login | Create New User">
         <font>
            <Font name="System Bold" size="18.0"/>
         </font>
      </Label>
      <Label layoutX="83.0" layoutY="79.0" text="Username:">
         <font>
            <Font size="14.0"/>
         </font>
      </Label>
      <Label layoutX="85.0" layoutY="150.0" text="Password:">
         <font>
            <Font size="14.0"/>
         </font>
      </Label>
      <Label layoutX="83.0" layoutY="227.0" text="Confirm Password:">
         <font>
            <Font size="14.0"/>
         </font>
      </Label>
      <TextField fx:id="txtNewUsername" layoutX="215.0" layoutY="76.0" onKeyTyped="#checkUsername" prefHeight="26.0"
                 prefWidth="188.0" promptText="Enter Username."/>
      <PasswordField fx:id="txtNewPassword" layoutX="215.0" layoutY="147.0" prefHeight="26.0" prefWidth="188.0"
                     promptText="Enter Password."/>
      <PasswordField fx:id="txtNewConfirmPassword" layoutX="215.0" layoutY="224.0" prefHeight="26.0" prefWidth="188.0"
                     promptText="Confirm Entered Password."/>
      <Button layoutX="314.0" layoutY="310.0" mnemonicParsing="false" onAction="#btnSignUpClicked" prefHeight="38.0"
              prefWidth="100.0" text="Sign Up">
         <font>
            <Font name="System Bold" size="16.0"/>
         </font>
      </Button>
      <Button layoutX="193.0" layoutY="311.0" mnemonicParsing="false" onAction="#btnResetClicked" prefWidth="100.0"
              text="Reset">
         <font>
            <Font name="System Bold" size="16.0"/>
         </font>
      </Button>
      <Button fx:id="btnCancel" layoutX="73.0" layoutY="311.0" mnemonicParsing="false" onAction="#btnCancelClicked"
              prefWidth="100.0" text="Cancel">
         <font>
            <Font name="System Bold" size="16.0"/>
         </font>
      </Button>
   </AnchorPane>
   <AnchorPane prefHeight="112.0" prefWidth="502.0" style="-fx-background-color: #e6bf5e;" AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <Label layoutX="122.0" layoutY="24.0" text="Books Management System (BMS)">
         <font>
            <Font name="System Bold" size="22.0"/>
         </font>
      </Label>
      <Label layoutX="122.0" layoutY="71.0" text="By Linuka Ratnayake">
         <font>
            <Font name="System Bold" size="14.0"/>
         </font>
      </Label>
      <ImageView fx:id="ivLogo" fitHeight="97.0" fitWidth="100.0" layoutX="14.0" layoutY="8.0" pickOnBounds="true"
                 preserveRatio="true"/>
   </AnchorPane>
</AnchorPane>
