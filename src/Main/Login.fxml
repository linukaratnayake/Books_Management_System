<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/15.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main.LoginController">
   <Label layoutX="202.0" layoutY="35.0" text="Login" textAlignment="CENTER">
      <font>
         <Font name="System Bold" size="36.0"/>
      </font>
   </Label>
   <Label layoutX="99.0" layoutY="125.0" text="Username:">
      <font>
         <Font size="14.0"/>
      </font>
   </Label>
   <Label layoutX="99.0" layoutY="183.0" text="Password:">
      <font>
         <Font size="14.0"/>
      </font>
   </Label>
   <TextField fx:id="txtUsername" layoutX="207.0" layoutY="120.0" onKeyPressed="#enterPressed" prefHeight="30.0"
              prefWidth="193.0" promptText="Type username here.">
      <font>
         <Font name="Times New Roman" size="14.0"/>
      </font>
   </TextField>
   <PasswordField fx:id="txtPassword" layoutX="207.0" layoutY="178.0" onKeyPressed="#enterPressed" prefHeight="30.0"
                  prefWidth="194.0" promptText="Type password here.">
      <font>
         <Font name="Times New Roman" size="14.0"/>
      </font>
   </PasswordField>
   <Button layoutX="288.0" layoutY="266.0" mnemonicParsing="false" onAction="#btnLoginClicked"
           prefWidth="100.0" text="Login">
      <font>
         <Font name="System Bold" size="16.0"/>
      </font>
   </Button>
   <Button layoutX="111.0" layoutY="266.0" mnemonicParsing="false" onAction="#btnCancelClicked"
           prefWidth="100.0" text="Cancel">
      <font>
         <Font name="System Bold" size="16.0"/>
      </font>
   </Button>
   <ImageView fitHeight="106.0" fitWidth="117.0" layoutX="-1.0" pickOnBounds="true" preserveRatio="true"/>
</AnchorPane>
